<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sanstormsolutions.com.popularmovies.MovieDetailActivity">

    <ImageView
        android:id="@+id/activity_movie_detail_imgvPoster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/activity_movie_detail_txtvMovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_movie_detail_imgvPoster"
        android:layout_marginTop="10dp"
        android:text="Big Trouble in Little China"/>

    <TextView
        android:id="@+id/activity_movie_detail_txtvMovieOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_movie_detail_txtvReleaseDate"
        android:layout_marginTop="10dp"
        android:text="Minions Stuart, Kevin and Bob are recruited by Scarlet Overkill, a super-villain who, alongside her inventor husband Herb, hatches a plot to take over the world."/>

    <TextView
        android:id="@+id/activity_movie_detail_txtvUserRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_movie_detail_imgvPoster"
        android:layout_alignEnd="@+id/activity_movie_detail_imgvPoster"
        android:layout_marginTop="10dp"
        android:text="8.9"/>

    <TextView
        android:id="@+id/activity_movie_detail_txtvReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_movie_detail_txtvMovieTitle"
        android:layout_marginTop="6dp"
        android:text="12-12-15"/>
</RelativeLayout>
